 <% @page_name = "Delete Admin User" %>
 <%= link_to("<< Back to Menu", admin_path, :class => 'Back-link') %>
 <div class = "admin_user delete">
 		<h2>Delete user</h2>
 		<%= form_for(@admin_user, :method => 'delete') do |f| %>
 		<p> Are you sure you want to permanently delete this user?</p>
 		<p class = " reference-name"> <%= f.object.name %></p>
 			<div class="form-buttons">
 				<%= f.submit("Delete Admin User") %>
 			</div>
     	<% end %>
 </div>
